---
# metadata for json-ld export
---
{%- assign items = site.data[site.metadata] | where_exp: 'item','item.objectid' -%}
{%- assign fields = site.data.theme.metadata-export-fields | split: "," -%}

{
    "@context": {
        "dc": "http://purl.org/dc/terms/",
        "madsrdf": "http://www.loc.gov/mads/rdf/v1#",
        "rda": "http://rdaregistry.info/Elements/a/",
        "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
        "schema": "http://schema.org/",
        "skos": "http://www.w3.org/2004/02/skos/core#"
    },
    "@type": "thesaurus",
    "name": "ISUVocabulary",
    "startDate": "2022-01-01",
    "objects": [
        {%- for item in items -%}
        {
          "rdf:type": ["skos:Concept", "madsrdf:Authority", {% assign term_uris = item.term_type_uri | split: ';' %}{% for t in term_uris %}{{ t | jsonify }}{% unless forloop.last %}, {% endunless %}{% endfor %}],
          "skos:prefLabel": {{ item.pref_label | jsonify }},
          "dc:type": "http://purl.org/dc/dcmitype/Text",
          "dc:identifier": {{ item.objectid | jsonify }},
          "dc:title": {{ item.title | jsonify }},
          "dc:identifier": {{ '/items/' | append: item.objectid | append: '.html' | absolute_url | jsonify }},
          "skos:inScheme": {{ item.vocabulary_uri | jsonify }},
          "skos:definition": {{ item.definition | jsonify }},
          "skos:scopeNote": {{ item.usage | jsonify }},
          "skos:historyNote": {{ item.history | jsonify }},
          "skos:altLabel": [{% assign alt_forms = item.alternative_form | split: ';' %}{% for a in alt_forms %}{{ a | jsonify }}{% unless forloop.last %}, {% endunless %}{% endfor %}],
          "dc:subject": {% if item.subject_area %}{{ item.subject_area | jsonify }}{% else %}null{% endif %},
          "skos:broader": {% if item.broader_term_objectid %}{{ '/items/' | append: item.broader_term_objectid | append: '.html' | absolute_url | jsonify }}{% else %}null{% endif %},
          "skos:narrower": {% if item.narrower_term_objectid %}{{ '/items/' | append: item.narrower_term_objectid | append: '.html' | absolute_url | jsonify }}{% else %}null{% endif %},
          "skos:closeMatch": [{% assign close_match = item.close_match_uri | split: ';' %}{% for c in close_match %}{{ c | jsonify }}{% unless forloop.last %}, {% endunless %}{% endfor %}],
          "skos:exactMatch": {{ item.exact_match_uri | jsonify }},
          "skos:related": [{% assign communities = item.related_external_uri | split: ';' %}{% for c in communities %}{{ c | jsonify }}{% unless forloop.last %}, {% endunless %}{% endfor %}],
          "skos:related": [{% assign related = item.related_term_uri | split: ';' %}{% for r in related %}{{ r | jsonify }}{% unless forloop.last %}, {% endunless %}{% endfor %}],
          "madsrdf:associatedLocale": [{% assign location = item.location_uri | split: ';' %}{% for l in location %}{{ l | jsonify }}{% unless forloop.last %}, {% endunless %}{% endfor %}],
          "madsrdf:associatedLanguage": [{% assign language = item.language | split: ';' %}{% for l in language %}{{ l | jsonify }}{% unless forloop.last %}, {% endunless %}{% endfor %}],
          "madsrdf:establishDate": {{ item.establish_date | jsonify }},
          "madsrdf:terminateDate": {{ item.terminate_date | jsonify }},
          "madsrdf:birthDate": {{ item.birth_date | jsonify }},
          "madsrdf:deathDate": {{ item.death_date | jsonify }},
          "madsrdf:hasSource": [{% assign source = item.source | split: ';' %}{% for s in source %}{{ s | jsonify}}{% unless forloop.last %}, {% endunless %}{% endfor %}],
          "dc:publisher": {{ item.publisher_uri | jsonify }},
          "dc:rights": {{ item.rights | jsonify }},
          "skos:example": {{ item.rights_statement | jsonify }},
          "rda:P50301": {% if item.absorbed_organization_objectid %}{{ '/items/' | append: item.absorbed_organization_objectid | append: '.html' | absolute_url | jsonify }}{% else %}null{% endif %},
          "rda:P50302": {% if item.absorbing_organization_objectid %}{{ '/items/' | append: item.absorbing_organization_objectid | append: '.html' | absolute_url | jsonify }}{% else %}null{% endif %},
          "rda:P50232": {% if item.component_of_merger_objectid %}{{ '/items/' | append: item.component_of_merger_objectid | append: '.html' | absolute_url | jsonify }}{% else %}null{% endif %},
          "rda:P50011": {% if item.mergee_objectid %}{{ '/items/' | append: item.mergee_objectid | append: '.html' | absolute_url | jsonify }}{% else %}null{% endif %},
          "rda:P50012": {% if item.predecessor_objectid %}{{ '/items/' | append: item.predecessor_objectid | append: '.html' | absolute_url | jsonify}}{% else %}null{% endif %},
          "rda:P50229": {% if item.predecessor_of_split_objectid %}{{ '/items/' | append: item.predecessor_of_split_objectid | append: '.html' | absolute_url | jsonify }}{% else %}null{% endif %},
          "rda:P50013": {% if item.product_of_merger_objectid %}{{ '/items/' | append: item.product_of_merger_objectid | append: '.html' | absolute_url | jsonify }}{% else %}null{% endif %},
          "rda:P50014": {% if item.product_of_split_objectid %}{{ '/items/' | append: item.product_of_split_objectid | append: '.html' | absolute_url | jsonify }}{% else %}null{% endif %},
          "rda:P50016": {% if item.successor_objectid %}{{ '/items/' | append: item.successor_objectid | append: '.html' | absolute_url | jsonify }}{% else %}null{% endif %}
        }{% unless forloop.last %},{% endunless %}
        {% endfor %}
    ]
}
